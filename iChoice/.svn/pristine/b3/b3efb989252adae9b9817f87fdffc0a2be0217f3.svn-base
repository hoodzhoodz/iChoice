<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:stv="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".healthcheck.activity.wristpulse.DeviceSettingWpoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.allen.library.SuperTextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:layout_marginLeft="@dimen/dp_2"
                stv:sLeftTextColor="@color/color_000000"
                stv:sLeftTextSize="@dimen/sp_15"
                stv:sLeftTextString="@string/how_to_use"
                stv:sRightIconRes="@drawable/ic_right_next" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12">

                <View style="@style/horizontal_line_style" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.allen.library.SuperTextView
                stv:sLeftTextColor="@color/color_000000"
                stv:sLeftTextSize="@dimen/sp_15"
                stv:sLeftTextString="@string/faq"
                stv:sRightIconRes="@drawable/ic_right_next"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:layout_marginLeft="@dimen/dp_2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12">

                <View style="@style/horizontal_line_style" />
            </LinearLayout>


            <Button
                android:id="@+id/delete_device_wpo"
                style="@style/style_button"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="290dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/selector_btn_positive"
                android:text="@string/delete_device" />
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>