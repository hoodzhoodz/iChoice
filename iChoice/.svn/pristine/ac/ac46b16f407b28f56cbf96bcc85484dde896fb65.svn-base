<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="@dimen/dp_34"
    android:paddingLeft="@dimen/dp_34"
    android:orientation="vertical">

    <TextView
        android:id="@+id/gender_tip"
        style="@style/style_tip"
        android:layout_marginTop="@dimen/dp_75"
        android:text="@string/what_gender" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:padding="15dp">

        <LinearLayout
            android:id="@+id/rb_man"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="@dimen/dp_25"
            android:button="@null"
            android:drawablePadding="@dimen/dp_15"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_man"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/selector_rb_man" />

            <TextView
                android:id="@+id/tv_man"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/man"
                android:textAlignment="center"
                android:textColor="@drawable/trend_text" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rb_woman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:button="@null"
            android:drawablePadding="@dimen/dp_15"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_woman"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/selector_rb_woman" />

            <TextView
                android:id="@+id/tv_woman"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/woman"
                android:textAlignment="center"
                android:textColor="@drawable/trend_text" />
        </LinearLayout>

    </RelativeLayout>

    <Button
        android:id="@+id/btn_continue"
        style="@style/style_button"
        android:layout_marginTop="50dp"
        android:background="@drawable/selector_btn_positive"
        android:text="@string/btn_continue" />


</LinearLayout>