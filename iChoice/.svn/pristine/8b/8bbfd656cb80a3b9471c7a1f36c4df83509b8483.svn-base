<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bp_measure"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="12dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="12dp"
    app:cardCornerRadius="10dp"
    tools:showIn="@layout/fragment_report_measure">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@mipmap/blood_pressure_small" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:text="@string/Blood_Pressure"
                android:textAlignment="viewStart"
                android:textColor="@color/black" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentLeft="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/sys_scope"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/normal_sys"
                        android:textColor="@android:color/holo_orange_dark"
                        android:textSize="14sp" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/SYS"
                        android:textAlignment="center"
                        android:textSize="14sp" />

                    <TextView

                        android:id="@+id/sys_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:text="0"
                        android:textColor="@android:color/background_dark"
                        android:textSize="23sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/re_sys_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mmHg"
                        android:textSize="14sp" />
                </LinearLayout>

                <com.choicemmed.ichoice.healthreport.custom.ArcTwoCircle
                    android:id="@+id/sys_arcTwoCircle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp" />

                <ImageView
                    android:id="@+id/sys_circle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="118dp"
                    android:paddingRight="74dp"
                    android:paddingBottom="18dp"
                    android:src="@mipmap/circle" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentRight="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/dia_scope"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/normal_dia"
                        android:textColor="@android:color/holo_orange_dark"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/DIA"
                        android:textAlignment="center"
                        android:textSize="14sp" />

                    <TextView

                        android:id="@+id/dia_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:text="0"
                        android:textColor="@android:color/background_dark"
                        android:textSize="23sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/re_dia_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mmHg"
                        android:textSize="14sp" />
                </LinearLayout>

                <com.choicemmed.ichoice.healthreport.custom.ArcTwoCircle
                    android:id="@+id/dia_arcTwoCircle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp" />

                <ImageView

                    android:id="@+id/dia_circle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="118dp"
                    android:paddingRight="74dp"
                    android:paddingBottom="18dp"
                    android:src="@mipmap/circle" />

            </FrameLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/normal_pulse"
                        android:textColor="@android:color/holo_orange_dark"
                        android:textSize="14sp" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Pulse"
                        android:textAlignment="center"
                        android:textSize="14sp" />

                    <TextView

                        android:id="@+id/pr_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:text="0"
                        android:textColor="@android:color/background_dark"
                        android:textSize="23sp"
                        android:textStyle="bold" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/bpm_"
                        android:textSize="14sp" />
                </LinearLayout>

                <com.choicemmed.ichoice.healthreport.custom.ArcTwoCircle
                    android:id="@+id/pr_arcTwoCircle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp" />

                <ImageView

                    android:id="@+id/pr_circle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="118dp"
                    android:paddingRight="74dp"
                    android:paddingBottom="18dp"
                    android:src="@mipmap/circle" />

            </FrameLayout>
        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>