<resources>

    <!-- Base application theme. -->
    <style name="MyAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="calenderTheme" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/transparency</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="style_button">
        <item name="android:textSize">@dimen/sp_15</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_40</item>
        <item name="android:textColor">@color/color_fbfbfd</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="style_tip">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/color_000000</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="style_register_et">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/dp_9</item>
        <item name="android:textColor">@color/color_b5b5b6</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:lines">1</item>
        <!--<item name="android:textColorHint">@color/color_b5b5b6</item>-->
    </style>
    <style name="style_information_tv">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/dp_9</item>
        <item name="android:textColor">@color/color_000000</item>
        <item name="android:textColorHint">@color/color_b5b5b6</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:lines">1</item>
        <!--<item name="android:textColorHint">@color/color_b5b5b6</item>-->
    </style>
    <style name="style_device_tv">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_b5b5b6</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:lines">1</item>
        <item name="android:paddingBottom">@dimen/dp_9</item>
    </style>
    <style name="style_device_item_tv">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_000000</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:lines">1</item>
        <item name="android:paddingBottom">@dimen/dp_9</item>
    </style>
    <style name="style_add_device_tv">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_40</item>
        <item name="android:layout_margin">@dimen/dp_9</item>
        <item name="android:textColor">@color/color_000000</item>
        <item name="android:textColorHint">@color/color_000000</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:lines">1</item>
        <!--<item name="android:textColorHint">@color/color_b5b5b6</item>-->
    </style>
    <style name="view_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/color_04d9b4</item>
        <item name="android:layout_marginLeft">@dimen/dp_9</item>
        <item name="android:layout_marginRight">@dimen/dp_9</item>
    </style>
    <style name="view_grey_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/color_b5b5b6</item>
        <item name="android:layout_marginLeft">@dimen/dp_9</item>
    </style>
    <style name="view_device_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/color_b5b5b6</item>
    </style>
    <!--公用水平分割线-->
    <style name="horizontal_line_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/main_tab_driver</item>
    </style>


    <!-- 右圆角样式 -->
    <style name="right_layout">
        <item name="android:background">@drawable/right_layout_selector</item>
    </style>

    <!--无圆角样式  -->

    <style name="mid_layout">
        <item name="android:background">@drawable/mid_layout_selector</item>
    </style>

    <!-- 下圆角样式 -->

    <style name="left_layout">
        <item name="android:background">@drawable/left_layout_selector</item>
    </style>

    <style name="btn_style">
        <item name="android:textColor">@drawable/btn_font_color</item>
        <item name="android:background">@drawable/btn_press</item>
    </style>

    <style name="MaterialCalendarTextStyelNormal">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="menu_animation">
        <item name="android:windowEnterAnimation">@anim/menu_appear</item>
        <item name="android:windowExitAnimation">@anim/menu_disappear</item>
    </style>
    <!--点测历史数据趋势图-->
    <style name="ox_chart_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp_15</item>
        <item name="android:layout_marginLeft">@dimen/dp_10</item>
        <item name="android:layout_marginTop">@dimen/dp_5</item>
        <item name="android:textColor">@color/pulse_oximeter_blue</item>
    </style>
</resources>

