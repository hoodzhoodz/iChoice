<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.yanzhenjie.recyclerview.swipe.SwipeMenuRecyclerView
        android:id="@+id/rc_devices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:id="@+id/rl_devices"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_56"
        android:layout_marginLeft="@dimen/dp_22"
        android:visibility="invisible">

        <ImageView
            android:id="@+id/img_devices"
            android:layout_width="@dimen/dp_37"
            android:layout_height="@dimen/dp_37"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:src="@mipmap/devices_image_add"
            android:layout_alignParentBottom="true"/>

        <TextView
            android:id="@+id/tv_devices"
            style="@style/style_device_tv"
            android:layout_toRightOf="@+id/img_devices"
            android:hint="@string/add_devices"
            android:layout_alignParentBottom="true"/>

        <View
            style="@style/view_device_line"
            android:layout_toRightOf="@+id/img_devices"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>
</LinearLayout>