<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:layout_marginTop="24dp"
    android:id="@+id/select_device_recyclerView_item">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:background="@drawable/bg_circle">

        <ImageView
            android:id="@+id/select_device_recyclerView_item_imageView"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            app:srcCompat="@mipmap/add_device_pulse_oximeter_md300ci218" />

    </FrameLayout>

    <TextView
        android:id="@+id/select_device_recyclerView_item_editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="@string/MD300CI218"
        android:textAlignment="center" />
</LinearLayout>