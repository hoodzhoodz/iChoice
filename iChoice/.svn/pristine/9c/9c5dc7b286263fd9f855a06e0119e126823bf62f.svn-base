                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:text="@string/therometer"
                android:textColor="@color/black"
                android:gravity="center" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:orientation="horizontal">


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="200dp"
                        android:layout_centerInParent="true"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.5">


                                <TextView
                                    android:id="@+id/tv_current"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"

                                    android:layout_alignParentBottom="true"
                                    android:layout_centerHorizontal="true"
                                    android:gravity="center"
                                    android:text="@string/last_record"
                                    android:textColor="@color/blue_8c9eff"
                                    android:textSize="12sp" />


                            </RelativeLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="2"
                                android:gravity="center_horizontal">

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"

                                    >


                                    <TextView
                                        android:id="@+id/temp_left"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text=""
                                        android:textColor="@color/text_temp"
                                        android:textSize="92sp"
                                        />


                                    <TextView
                                        android:id="@+id/temp_right"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignBaseline="@id/temp_left"
                                        android:layout_toRightOf="@id/temp_left"
                                        android:gravity="center"
                                        android:text=""
                                        android:textColor="@color/text_temp"
                                        android:textSize="64sp" />

                                    <TextView
                                        android:id="@+id/tv_unit"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentTop="true"
                                        android:layout_marginLeft="@dimen/dp_20"
                                        android:layout_toRightOf="@id/temp_left"
                                        android:text=""
                                        android:textColor="@color/blue_8c9eff"
                                        android:textSize="19sp" />
                                </RelativeLayout>
                            </LinearLayout>

                        </LinearLayout>


                    </LinearLayout>


