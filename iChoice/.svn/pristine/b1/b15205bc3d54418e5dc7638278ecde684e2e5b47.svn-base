<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    tools:context=".healthcheck.activity.bloodpressure.ResultBpActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="360dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/bpmeasurement"
                style="@style/left_layout"
                android:layout_width="120dp"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_measurement"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/measurement"
                    android:textAlignment="center"
                    android:textColor="@drawable/top_text"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/historical_results"
                style="@style/mid_layout"
                android:layout_width="120dp"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_historical_results"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/historical_results"
                    android:textAlignment="center"
                    android:textColor="@drawable/top_text"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/historical_trend"
                style="@style/right_layout"
                android:layout_width="120dp"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_historical_trend"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/historical_trend"
                    android:textAlignment="center"
                    android:textColor="@drawable/top_text" />

            </LinearLayout>


        </LinearLayout>

        <FrameLayout
            android:id="@+id/fragment_result_bp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>




</android.support.constraint.ConstraintLayout>