<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_gravity="center">

            <com.choicemmed.ichoice.framework.widget.CircleLoading
                android:layout_width="210dp"
                android:layout_height="210dp" />

            <ImageView
                android:id="@+id/activity_search_device_ox_standard_imageView"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:src="@mipmap/add_device_pulse_oximeter_md300c208_positive" />
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/search_device"
            android:textColor="@color/color_000000"
            android:textSize="18sp"
            android:layout_marginTop="100dp" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>