<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_corner"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:layout_marginStart="17dp"
        android:layout_marginTop="7dp"
        android:gravity="top"
        android:textColor="@color/pulse_oximeter_blue"
        android:textSize="@dimen/sp_11" />

    <RelativeLayout
        android:layout_width="@dimen/dp_0"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_17"
        android:layout_weight="1"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_ox_spo2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/textView29"
            android:textSize="9sp" />

        <TextView
            android:id="@+id/ox_trend_bottom_spo2_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ox_no_data"
            android:textColor="@color/pulse_oximeter_blue"
            android:textSize="45sp" />

        <TextView
            android:id="@+id/textView29"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_2"
            android:text="@string/ox_percent"
            android:textSize="7sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="@dimen/dp_0"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_17"
        android:layout_weight="1"
        android:gravity="center">

        <TextView
            android:id="@+id/textView32"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ox_pr"
            android:textSize="9sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/textView32"
            android:paddingTop="@dimen/dp_2"
            android:text="@string/ox_bpm"
            android:textSize="7sp" />

        <TextView
            android:id="@+id/ox_trend_bottom_pr_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6dp"
            android:text="@string/ox_no_data"
            android:textColor="@color/pulse_oximeter_blue"
            android:textSize="45sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="@dimen/dp_0"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_17"
        android:layout_weight="1"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_rr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rr"
            android:textSize="9sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_rr"
            android:paddingTop="@dimen/dp_2"
            android:text="@string/ox_bpm"
            android:textSize="7sp" />

        <TextView
            android:id="@+id/ox_trend_bottom_rr_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6dp"
            android:text="@string/ox_no_data"
            android:textColor="@color/pulse_oximeter_blue"
            android:textSize="45sp" />

    </RelativeLayout>

</LinearLayout>