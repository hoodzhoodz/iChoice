<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_180"
        android:layout_margin="@dimen/dp_15"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_camera"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_55"
            android:gravity="center"
            android:text="@string/take_camera"
            android:textColor="@color/color_04d9b4"
            android:textSize="@dimen/sp_15"
            android:background="@drawable/selector_top_round"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_c8c7cc" />

        <TextView
            android:id="@+id/tv_album"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_55"
            android:gravity="center"
            android:text="@string/take_album"
            android:textColor="@color/color_04d9b4"
            android:textSize="@dimen/sp_15"
            android:background="@drawable/selector_bottom_round"/>

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_55"
            android:layout_marginTop="@dimen/dp_15"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/color_04d9b4"
            android:textSize="@dimen/sp_15"
            android:background="@drawable/selector_round"/>

    </LinearLayout>


</LinearLayout>