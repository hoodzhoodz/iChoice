<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="@dimen/dp_34"
    android:paddingLeft="@dimen/dp_34"
    android:orientation="vertical">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/img_avatar"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_80"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/dp_65"
        android:layout_marginTop="@dimen/dp_75"
        fresco:placeholderImage="@mipmap/ic_add_avatar"
        fresco:roundAsCircle="true"/>

    <TextView
        style="@style/style_tip"
        android:text="@string/avatar_tip" />

    <Button
        android:id="@+id/btn_continue"
        style="@style/style_button"
        android:layout_marginTop="@dimen/dp_117"
        android:background="@drawable/selector_btn_positive"
        android:text="@string/btn_continue" />

</LinearLayout>