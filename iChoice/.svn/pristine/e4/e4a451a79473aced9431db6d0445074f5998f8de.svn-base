<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff">
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/rl_add_devices_blood"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                android:layout_marginLeft="@dimen/dp_22">

                <ImageView
                    android:id="@+id/img_blood"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_9"
                    android:src="@mipmap/blood_pressure_ico"
                    android:layout_alignParentBottom="true"/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_40"
                    android:layout_toRightOf="@+id/img_blood"
                    android:orientation="horizontal"
                    android:layout_alignParentBottom="true">
                    <TextView
                        style="@style/style_add_device_tv"
                        android:hint="@string/Blood_Pressure" />
                    <ImageView
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:src="@drawable/ic_right_next"
                        android:layout_marginRight="@dimen/dp_12"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="@dimen/dp_8"/>
                    <View
                        style="@style/view_grey_line"
                        android:layout_alignParentBottom="true"/>
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_add_devices_ecg"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                android:layout_marginLeft="@dimen/dp_22">
                <ImageView
                    android:id="@+id/img_ecg"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_9"
                    android:src="@mipmap/ecg_ico"
                    android:layout_alignParentBottom="true"/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_40"
                    android:layout_toRightOf="@+id/img_ecg"
                    android:orientation="horizontal"
                    android:layout_alignParentBottom="true">
                    <TextView
                        style="@style/style_add_device_tv"
                        android:hint="@string/ecg" />
                    <ImageView
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:src="@drawable/ic_right_next"
                        android:layout_marginRight="@dimen/dp_12"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="@dimen/dp_8"/>
                    <View
                        style="@style/view_grey_line"
                        android:layout_alignParentBottom="true"/>
                </RelativeLayout>
            </RelativeLayout>



            <RelativeLayout
                android:id="@+id/rl_add_devices_sleep_monitor"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                android:layout_marginLeft="@dimen/dp_22">
                <ImageView
                    android:id="@+id/img_sleep_monitor"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_9"
                    android:src="@mipmap/sleep_monitor"
                    android:layout_alignParentBottom="true"/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_40"
                    android:layout_toRightOf="@+id/img_sleep_monitor"
                    android:orientation="horizontal"
                    android:layout_alignParentBottom="true">
                    <TextView
                        style="@style/style_add_device_tv"
                        android:hint="@string/wrist_pulse_oximeter"/>
                    <ImageView
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:src="@drawable/ic_right_next"
                        android:layout_marginRight="@dimen/dp_12"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="@dimen/dp_8"/>
                    <View
                        style="@style/view_grey_line"
                        android:layout_alignParentBottom="true"/>
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_add_devices_pulse_oximeter"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                android:layout_marginLeft="@dimen/dp_22">

                <ImageView
                    android:id="@+id/img_pulse_oximeter"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_9"
                    android:src="@mipmap/pulse_oximeter"
                    android:layout_alignParentBottom="true"/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_40"
                    android:layout_toRightOf="@+id/img_pulse_oximeter"
                    android:orientation="horizontal"
                    android:layout_alignParentBottom="true">
                    <TextView
                        style="@style/style_add_device_tv"
                        android:hint="@string/pulse_qximeter" />
                    <ImageView
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:src="@drawable/ic_right_next"
                        android:layout_marginRight="@dimen/dp_12"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="@dimen/dp_8"/>
                    <View
                        style="@style/view_grey_line"
                        android:layout_alignParentBottom="true"/>
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_add_devices_thermometer"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                android:layout_marginLeft="@dimen/dp_22">

                <ImageView
                    android:id="@+id/img_thermometer"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_9"
                    android:src="@mipmap/big_thermometer2"
                    android:layout_alignParentBottom="true"/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_40"
                    android:layout_toRightOf="@+id/img_thermometer"
                    android:orientation="horizontal"
                    android:layout_alignParentBottom="true">
                    <TextView
                        style="@style/style_add_device_tv"
                        android:hint="@string/therometer" />
                    <ImageView
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:src="@drawable/ic_right_next"
                        android:layout_marginRight="@dimen/dp_12"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="@dimen/dp_8"/>
                    <View
                        style="@style/view_grey_line"
                        android:layout_alignParentBottom="true"/>
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_add_devices_scale"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                android:layout_marginLeft="@dimen/dp_22">

                <ImageView
                    android:id="@+id/img_scale"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_9"
                    android:src="@mipmap/scale"
                    android:layout_alignParentBottom="true"/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_40"
                    android:layout_toRightOf="@+id/img_scale"
                    android:orientation="horizontal"
                    android:layout_alignParentBottom="true">
                    <TextView
                        style="@style/style_add_device_tv"
                        android:hint="@string/scale" />
                    <ImageView
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:src="@drawable/ic_right_next"
                        android:layout_marginRight="@dimen/dp_12"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="@dimen/dp_8"/>
                    <View
                        style="@style/view_grey_line"
                        android:layout_alignParentBottom="true"/>
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_add_devices_fitness_tracker"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                android:layout_marginLeft="@dimen/dp_22">

                <ImageView
                    android:id="@+id/img_fitness_tracker"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_9"
                    android:src="@mipmap/fitness_tracker"
                    android:layout_alignParentBottom="true"/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_40"
                    android:layout_toRightOf="@+id/img_fitness_tracker"
                    android:orientation="horizontal"
                    android:layout_alignParentBottom="true">
                    <TextView
                        style="@style/style_add_device_tv"
                        android:hint="@string/fitness_tracker" />
                    <ImageView
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:src="@drawable/ic_right_next"
                        android:layout_marginRight="@dimen/dp_12"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="@dimen/dp_8"/>
                    <View
                        style="@style/view_grey_line"
                        android:layout_alignParentBottom="true"/>
                </RelativeLayout>
            </RelativeLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


</LinearLayout>