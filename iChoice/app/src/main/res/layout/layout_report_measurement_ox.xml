<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ox_measure"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="12dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="12dp"
    app:cardCornerRadius="10dp"
    >
    <!--    tools:showIn="@layout/fragment_report_measure"-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@mipmap/pulse_oximeter_small"></ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/pulse_oximeter"
                android:textAlignment="textStart"
                android:textColor="@color/black">

            </TextView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_alignParentLeft="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="20dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/ox_spo2_range"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/normal_spo2"
                            android:textColor="@color/color_ox_result"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/spo2"
                            android:textAlignment="center"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/ox_spo2_data"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:text="--"
                            android:textColor="@android:color/background_dark"
                            android:textSize="23sp"
                            android:textStyle="bold" />

<!--                        <TextView-->

<!--                            android:layout_width="wrap_content"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:text="@string/mmHg"-->
<!--                            android:textSize="14sp" />-->
                    </LinearLayout>

                    <com.choicemmed.ichoice.healthreport.custom.OxCircle
                        android:id="@+id/spo2_oxCircle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp" />

                    <ImageView
                        android:id="@+id/spo2_globe"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingTop="114dp"
                        android:paddingRight="83dp"
                        android:paddingBottom="22dp"
                        android:src="@mipmap/ox_circle"
                        android:visibility="gone"/>

                </FrameLayout>

                <FrameLayout
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_alignParentRight="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="20dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/ox_pr_range"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/normal_pr"
                            android:textColor="@color/color_ox_result"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/pr_bpm"
                            android:textAlignment="center"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/ox_pr_data"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:text="--"
                            android:textColor="@android:color/background_dark"
                            android:textSize="23sp"
                            android:textStyle="bold" />

<!--                        <TextView-->

<!--                            android:layout_width="wrap_content"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:text="@string/mmHg"-->
<!--                            android:textSize="14sp" />-->
                    </LinearLayout>

                    <com.choicemmed.ichoice.healthreport.custom.OxCircle
                        android:id="@+id/pr_oxCircle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp" />

                    <ImageView
                        android:id="@+id/pr_globe"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingTop="118dp"
                        android:paddingRight="74dp"
                        android:paddingBottom="18dp"
                        android:src="@mipmap/ox_circle"
                        android:visibility="gone"/>

                </FrameLayout>

            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_alignParentLeft="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="20dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/ox_pi_range"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/normal_pi"
                            android:textColor="@color/color_ox_result"
                            android:textSize="14sp" />

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ox_pi_report"
                            android:textAlignment="center"
                            android:textSize="14sp" />

                        <TextView

                            android:id="@+id/ox_pi_data"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:text="--"
                            android:textColor="@android:color/background_dark"
                            android:textSize="23sp"
                            android:textStyle="bold" />

<!--                        <TextView-->
<!--                            android:id="@+id/re_sys_unit"-->
<!--                            android:layout_width="wrap_content"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:text="@string/mmHg"-->
<!--                            android:textSize="14sp" />-->
                    </LinearLayout>

                    <com.choicemmed.ichoice.healthreport.custom.OxCircle
                        android:id="@+id/pi_oxCircle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp" />

                    <ImageView
                        android:id="@+id/pi_globe"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingTop="118dp"
                        android:paddingRight="74dp"
                        android:paddingBottom="18dp"
                        android:src="@mipmap/ox_circle"
                        android:visibility="gone"/>

                </FrameLayout>

                <FrameLayout
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_alignParentRight="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="20dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/ox_rr_range"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/normal_rr"
                            android:textColor="@color/color_ox_result"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ox_rr_report"
                            android:textAlignment="center"
                            android:textSize="14sp" />

                        <TextView

                            android:id="@+id/ox_rr_data"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:text="--"
                            android:textColor="@android:color/background_dark"
                            android:textSize="23sp"
                            android:textStyle="bold" />

<!--                        <TextView-->
<!--                            android:id="@+id/re_dia_unit"-->
<!--                            android:layout_width="wrap_content"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:text="@string/mmHg"-->
<!--                            android:textSize="14sp" />-->
                    </LinearLayout>

                    <com.choicemmed.ichoice.healthreport.custom.OxCircle
                        android:id="@+id/rr_oxCircle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp" />

                    <ImageView
                        android:id="@+id/rr_globe"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingTop="118dp"
                        android:paddingRight="74dp"
                        android:paddingBottom="18dp"
                        android:src="@mipmap/ox_circle"
                        android:visibility="gone"/>

                </FrameLayout>

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>






</android.support.v7.widget.CardView>