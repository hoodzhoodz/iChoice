<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    >

    <android.support.v7.widget.CardView
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:background="@drawable/btn_oxmode_selector"
                    android:layout_alignParentRight="true"
                    android:layout_margin="12dp"
                    android:id="@+id/cancel"></Button>

            </RelativeLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="19sp"
                android:text="@string/choice_working_mode"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:textColor="@color/color_000000"
                android:singleLine="true"></TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="35dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/bt_point"
                        android:layout_width="220dp"
                        android:layout_height="45dp"
                        android:background="@drawable/btn_spot_selector"
                        android:gravity="center"
                        android:text="@string/ox_working_mode_point"
                        android:textColor="@color/color_ox_result"
                        android:textSize="16sp" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:id="@+id/bt_real"
                        android:layout_width="220dp"
                        android:layout_height="45dp"
                        android:background="@drawable/btn_realtime_selector"
                        android:gravity="center"
                        android:text="@string/real_time_measurement"
                        android:textColor="@color/color_ffffff"
                        android:textSize="16sp" />
                </RelativeLayout>


            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>