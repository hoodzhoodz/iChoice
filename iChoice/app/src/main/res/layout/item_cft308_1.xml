<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="67dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="54dp"
        app:cardCornerRadius="10dp"
        android:background="@color/white"
        android:layout_marginBottom="13dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv1"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:src="@mipmap/time"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="6dp"></ImageView>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15:12:03"
                    android:id="@+id/time"
                    android:textSize="17sp"
                    android:textColor="@color/text1"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/iv1"
                    android:layout_marginTop="2dp"></TextView>

                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="40dp"
                    android:background="@color/red1"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"></LinearLayout>

            </RelativeLayout>


            <ImageView
                android:layout_width="10dp"
                android:layout_height="25dp"
                android:src="@mipmap/wenduji"
                android:layout_centerInParent="true"
                android:id="@+id/wenduji"></ImageView>

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="37"
                android:layout_marginLeft="29dp"
                android:textSize="42sp"
                android:textColor="@color/red1"
                android:layout_toRightOf="@id/wenduji"
                android:gravity="center"></TextView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=".8"
                android:textSize="29sp"
                android:textColor="@color/red1"
                android:id="@+id/tv2"
                android:layout_toRightOf="@id/tv1"
                android:layout_alignBaseline="@id/tv1"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/temp_unit"
                android:textSize="13sp"
                android:textColor="@color/red1"
                android:layout_above="@id/tv2"
                android:layout_toRightOf="@id/tv1"
                android:layout_marginLeft="3dp"
                android:id="@+id/temp_unit"></TextView>


        </RelativeLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>