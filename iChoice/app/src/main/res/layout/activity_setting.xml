<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:stv="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <com.allen.library.SuperTextView
            android:id="@+id/stv_setting_password"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="@dimen/dp_2"
            stv:sLeftTextString="@string/password"
            stv:sLeftTextSize="@dimen/sp_15"
            stv:sLeftTextColor="@color/color_000000"
            stv:sRightIconRes="@drawable/ic_right_next" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12">
            <View style="@style/horizontal_line_style" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <com.allen.library.SuperTextView
            android:id="@+id/stv_setting_information"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_marginLeft="@dimen/dp_2"
            stv:sLeftTextString="@string/information"
            stv:sLeftTextSize="@dimen/sp_15"
            stv:sLeftTextColor="@color/color_000000"
            stv:sRightIconRes="@drawable/ic_right_next" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12">
            <View style="@style/horizontal_line_style" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>