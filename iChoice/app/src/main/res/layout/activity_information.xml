<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="@dimen/dp_45"
    android:paddingLeft="@dimen/dp_45"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_45">

        <ImageView
            android:id="@+id/img_FirstName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_9"
            android:src="@mipmap/ic_username" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/img_FirstName">

            <EditText
                android:id="@+id/tv_FirstName"
                style="@style/style_register_et"
                android:layout_toRightOf="@+id/img_FirstName"
                android:maxLength="20"
                android:gravity="center_horizontal"
                android:hint="@string/first_name"
                android:singleLine="true" />
        </android.support.design.widget.TextInputLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_FamilyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_9"
            android:src="@mipmap/ic_username" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/img_FamilyName">

            <EditText
                android:id="@+id/tv_FamilyName"
                style="@style/style_register_et"
                android:layout_toRightOf="@+id/img_FamilyName"
                android:gravity="center_horizontal"
                android:maxLength="20"
                android:hint="@string/family_name"
                android:singleLine="true" />
        </android.support.design.widget.TextInputLayout>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_9"
            android:src="@mipmap/ic_sex" />

        <TextView
            android:id="@+id/tv_information_gender"
            style="@style/style_information_tv"
            android:layout_toRightOf="@+id/img_gender"
            android:gravity="center_horizontal"
            android:hint="@string/what_gender" />

        <View
            style="@style/view_line"
            android:layout_below="@+id/tv_information_gender"
            android:layout_toRightOf="@+id/img_gender" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20">

        <ImageView
            android:id="@+id/img_birthday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_9"
            android:src="@mipmap/ic_birthday" />

        <TextView
            android:id="@+id/tv_information_birthday"
            style="@style/style_information_tv"
            android:layout_toRightOf="@+id/img_birthday"
            android:gravity="center_horizontal"
            android:hint="@string/what_birthday" />

        <View
            style="@style/view_line"
            android:layout_below="@+id/tv_information_birthday"
            android:layout_toRightOf="@+id/img_birthday" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20">

        <ImageView
            android:id="@+id/img_height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_9"
            android:src="@mipmap/ic_height" />

        <TextView
            android:id="@+id/tv_information_height"
            style="@style/style_information_tv"
            android:layout_toRightOf="@+id/img_height"
            android:gravity="center_horizontal"
            android:hint="@string/what_height" />

        <View
            style="@style/view_line"
            android:layout_below="@+id/tv_information_height"
            android:layout_toRightOf="@+id/img_height" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20">

        <ImageView
            android:id="@+id/img_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_9"
            android:src="@mipmap/ic_weight" />

        <TextView
            android:id="@+id/tv_information_weight"
            style="@style/style_information_tv"
            android:layout_toRightOf="@+id/img_weight"
            android:gravity="center_horizontal"
            android:hint="@string/what_weight" />

        <View
            style="@style/view_line"
            android:layout_below="@+id/tv_information_weight"
            android:layout_toRightOf="@+id/img_weight" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_information_ok"
        style="@style/style_button"
        android:layout_marginTop="@dimen/dp_60"
        android:layout_marginBottom="20dp"
        android:background="@drawable/selector_btn_positive"
        android:text="@string/ok" />

    <TextView
        android:id="@+id/tv_user_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:text="TextView"
        android:textAlignment="center" />


</LinearLayout>