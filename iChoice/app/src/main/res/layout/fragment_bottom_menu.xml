<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    android:orientation="vertical"
    android:background="#00000000">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/bottom_menu_layout_margin"
        android:background="@color/bottom_menu_layout_color">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/bottom_menu_btn_margin"
            android:layout_marginRight="@dimen/bottom_menu_btn_margin"
            android:background="@drawable/bottom_menu_btn_selector">

            <TextView
                android:id="@+id/menu_item"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:gravity="center"
                android:textColor="@color/bottom_menu_btn_text_commom_color"
                android:textSize="23sp"
                android:background="@drawable/bottom_menu_top_btn_selector"
                android:text="@string/temp_unit" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_eeeeee"
                android:id="@+id/tv1" />

            <TextView
                android:id="@+id/menu_item1"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:gravity="center"
                android:textColor="@color/bottom_menu_btn_text_commom_color"
                android:textSize="23sp"
                android:background="@drawable/bottom_menu_bottom_btn_selector"
                android:text="@string/temp_unit1" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/bottom_menu_layout_margin"
        android:background="@color/bottom_menu_layout_color">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottom_menu_btn_height"
            android:layout_margin="@dimen/bottom_menu_btn_margin"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/bottom_menu_btn_text_commom_color"
            android:textSize="@dimen/bottom_menu_btn_text_size"
            android:background="@drawable/bottom_menu_btn_selector">

        </TextView>
    </LinearLayout>


</LinearLayout>
