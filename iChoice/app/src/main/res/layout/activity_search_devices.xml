<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">
    <com.choicemmed.ichoice.framework.widget.WaveView
        android:id="@+id/waveview_search_devices"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_60"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_240"
        android:layout_marginLeft="@dimen/dp_40"
        android:layout_marginRight="@dimen/dp_40"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_36"
        android:layout_marginLeft="@dimen/dp_36"
        android:layout_marginTop="20dp"
        android:textSize="@dimen/sp_14"
        android:lineSpacingExtra="@dimen/dp_6"
        android:textColor="@color/color_000000"
        android:layout_above="@+id/waveview_search_devices"
        android:gravity="center"
        android:text="@string/search_devices_instructions"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_120"/>

</RelativeLayout>